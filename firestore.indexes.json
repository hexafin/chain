{
  "indexes": [
    // transaction index for searching based on sender and recipient
    {
      "collectionId": "transactions",
      "fields": [
        {
          "fieldPath": "from_user"
        },
        {
          "fieldPath": "to_user"
        },
        {
          "fieldPath": "timestamp",
          "mode": "DESCENDING"
        }
      ]
    },
    // person index for finding a user
    {
      "collectionId": "people",
      "fields": [
        {
          "fieldPath": "first_name"
        },
        {
          "fieldPath": "last_name"
        },
        {
          "fieldPath": "username"
        },
        {
          "fieldPath": "email"
        },
        {
          "fieldPath": "crypto.btc.address"
        },
        {
          "fieldPath": "crypto.eth.address"
        },
        {
          "fieldPath": "crypto.ltc.address"
        },
        {
          "fieldPath": "crypto.bch.address"
        }
      ]
    },
    // person indexing for finding a user based only on bitcoin address
    {
      "collectionId": "people",
      "fields": [
        {
          "fieldPath": "crypto.btc.address"
        }
      ]
    },
    // person indexing for finding a user based only on bitcoin cash address
    {
      "collectionId": "people",
      "fields": [
        {
          "fieldPath": "crypto.bch.address"
        }
      ]
    },
    // person indexing for finding a user based only on ethereum address
    {
      "collectionId": "people",
      "fields": [
        {
          "fieldPath": "crypto.eth.address"
        }
      ]
    },
    // person indexing for finding a user based only on litecoin address
    {
      "collectionId": "people",
      "fields": [
        {
          "fieldPath": "crypto.ltc.address"
        }
      ]
    }
  ]
}