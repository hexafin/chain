service cloud.firestore {
  match /databases/{database}/documents {

    // users
    match /people/{user_id} {
      allow read: if request.auth != null;
      // TODO: more complex read rules (private vs. public information)
      allow write: if request.auth.uid == user_id;
    }

    // transactions
    match /transactions/{transaction_id} {
      allow read: if true;
      allow write: if true;
    }

  }
}
