service cloud.firestore {
  match /databases/{database}/documents {

    // users
    match /people/{user_id} {
      allow read: if request.auth != null;
      // TODO: more complex read rules (private vs. public information)
      allow write: if request.auth.uid == user_id;
    }


    // transactions
    match /transactions/{transaction_id} {
      allow read: if request.auth.uid == resource.data.from_id ||
                        request.auth.uid == resource.data.to_id
      allow write: if request.auth.uid == resource.data.from_id &&
                        get(/people/$(request.auth.uid)).data.crypto[resource.data.crypto].balance >=
                         resource.data.amount_crypto + resource.data.fee.amount
    }

    // request data
    match /requests/{request_id} {
      allow read: if request.auth.uid == resource.data.from_id ||
                        request.auth.uid == resource.data.to_id
      allow write: if request.auth.uid == resource.data.to_id
    }

  }
}
